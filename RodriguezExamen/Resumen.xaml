<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RodriguezExamen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Resumen de Inscripción" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Usuario Conectado:" Grid.Row="0" Grid.Column="0"/>
            <Label x:Name="lblUsuario" Grid.Row="0" Grid.Column="1"/>

            <Label Text="Nombre" Grid.Row="1" Grid.Column="0"/>
            <Entry x:Name="txtNombre" Grid.Row="1" Grid.Column="1" IsEnabled="False"/>

                <Label Text="Total a Pagar ($USD)" Grid.Row="2" Grid.Column="0"/>
            <Entry x:Name="txtTotalPago" Grid.Row="2" Grid.Column="1" IsEnabled="False"/>

        </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>